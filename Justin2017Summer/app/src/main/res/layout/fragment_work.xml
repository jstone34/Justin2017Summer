<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.justin.justin2017summer.fragment.WorkFragment">


        //Top Banner
        <RelativeLayout
            android:id="@+id/topBanner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_light">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="Some text will go here as in the demo"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
        </RelativeLayout>


        //Middle Content
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/activity_main_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            //3 quizzes buttons
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">
                 <Button
                    android:text="Quiz1"
                    android:textColor="@color/white"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentStart="true" />
                <Button
                    android:text="Quiz2"
                    android:textColor="@color/white"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentStart="true" />
                <Button
                    android:onClick="Quiz3"
                    android:text="Quiz3"
                    android:textColor="@color/white"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentStart="true" />
            </LinearLayout>

            //Submit button
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <Button
                    android:onClick="submit"
                    android:background="@drawable/bt_bg"
                android:text="submit"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentStart="true" />

            </LinearLayout>

            <Button
                android:onClick="Quiz5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="quiz 5"/>

        </LinearLayout>




        //Main Layout for bottom banner
        <RelativeLayout
            android:id="@+id/bottomBanner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="200dp"
            android:background="@android:color/holo_blue_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="You can do it!"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
        </RelativeLayout>



</LinearLayout>
