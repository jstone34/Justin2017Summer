<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.justin.justin2017summer.AnimationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_animation_alpha"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="alpha"
            android:layout_weight="1"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/activity_animation_scale"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="scale"
            android:layout_weight="1"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/activity_animation_rotate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="rotate"
            android:layout_weight="1"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/activity_animation_trans"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="trans"
            android:layout_weight="1"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/activity_animation_set"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="set"
            android:layout_weight="1"
            android:textAllCaps="false"/>


    </LinearLayout>

    <TextView
        android:id="@+id/activity_animation_tv"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@mipmap/atl"
        android:layout_marginTop="125dp"
        />

   <!-- <TextView
        android:id="@+id/activity_animation_tv"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="Animation"
        android:textAllCaps="false"
        android:textSize="50dp"
        android:layout_marginTop="80sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_bright"
        />-->

</LinearLayout>
