<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.justin.justin2017summer.SharedPreferenceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/activity_shared_preference_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="please input your email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Password"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:id="@+id/activity_shared_preference_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="please input your password"
            android:inputType="textWebPassword"
            android:paddingLeft="15dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/activity_shared_preference_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="login"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/activity_shared_preference_clean"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cleaer Cache"
        android:textSize="30sp"/>


</LinearLayout>
