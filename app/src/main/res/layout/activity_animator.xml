<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    tools:context="com.example.justin.justin2017summer.AnimatorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="425dp">

        <Button
            android:id="@+id/animator_btn_start"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:text="Start"/>

        <TextView
            android:id="@+id/animator_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Hello, Android!"
            android:layout_centerHorizontal="true"
            android:textSize="23sp"
            android:padding="10dp"
            android:background="@android:color/holo_blue_bright"/>

        <Button
            android:id="@+id/animator_btn_stop"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:text="Stop"/>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/animator_bottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="10dp"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/animator_trans"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="110dp"
            android:text="trans"/>
        <Button
            android:id="@+id/animator_scale"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="110dp"
            android:text="scale"/>
        <Button
            android:id="@+id/animator_color"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="110dp"
            android:text="color"/>
        <Button
            android:id="@+id/animator_char"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="110dp"
            android:text="char"/>
        <Button
            android:id="@+id/animator_alpha"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="110dp"
            android:text="alpha"/>
        <Button
            android:id="@+id/animator_rotation"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="110dp"
            android:text="rotation"/>



    </GridLayout>

</RelativeLayout>
